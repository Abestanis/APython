<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:padding="20sp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pythonImage"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/python_icon"
            android:adjustViewBounds="true"
            android:layout_weight="0.7"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Python"
            android:id="@+id/textView2"
            android:textColor="@android:color/white"
            android:singleLine="true"
            android:textSize="80sp"
            android:gravity="center_vertical"
            android:layout_weight="0.3"
            android:paddingLeft="20sp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40sp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onPythonInterpreterButtonClick">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/python_icon"
                    android:adjustViewBounds="true"
                    android:layout_weight="0.8"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Python Interpreter"
                    android:layout_weight="0.2"
                    android:paddingLeft="20sp"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onDownloadVersionsButtonClick">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_upload"
                    android:adjustViewBounds="true"
                    android:layout_weight="0.8"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Download Versions"
                    android:layout_weight="0.2"
                    android:paddingLeft="20sp"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_dialog_info"
                    android:adjustViewBounds="true"
                    android:layout_weight="0.8"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:layout_weight="0.2"
                    android:paddingLeft="20sp"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_help"
                    android:adjustViewBounds="true"
                    android:layout_weight="0.8"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Help"
                    android:layout_weight="0.2"
                    android:paddingLeft="20sp"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_manage"
                    android:adjustViewBounds="true"
                    android:layout_weight="0.8"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:layout_weight="0.2"
                    android:paddingLeft="20sp"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>